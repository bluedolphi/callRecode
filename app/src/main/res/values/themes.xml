<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Material Design 3 Theme for Call Recording App -->
    <style name="Theme.CallRecode" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/recording_primary_40</item>
        <item name="colorOnPrimary">@color/neutral_99</item>
        <item name="colorPrimaryContainer">@color/recording_primary_80</item>
        <item name="colorOnPrimaryContainer">@color/recording_primary_20</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/call_secondary_40</item>
        <item name="colorOnSecondary">@color/neutral_99</item>
        <item name="colorSecondaryContainer">@color/call_secondary_80</item>
        <item name="colorOnSecondaryContainer">@color/call_secondary_20</item>
        
        <!-- Tertiary colors -->
        <item name="colorTertiary">@color/audio_tertiary_40</item>
        <item name="colorOnTertiary">@color/neutral_99</item>
        <item name="colorTertiaryContainer">@color/audio_tertiary_80</item>
        <item name="colorOnTertiaryContainer">@color/audio_tertiary_20</item>
        
        <!-- Background and surface colors -->
        <item name="android:colorBackground">@color/neutral_99</item>
        <item name="colorOnBackground">@color/neutral_10</item>
        <item name="colorSurface">@color/neutral_99</item>
        <item name="colorOnSurface">@color/neutral_10</item>
        
        <!-- Surface variant colors -->
        <item name="colorSurfaceVariant">@color/surface_container</item>
        <item name="colorOnSurfaceVariant">@color/neutral_40</item>
        <item name="colorSurfaceContainer">@color/surface_container</item>
        <item name="colorSurfaceContainerHigh">@color/surface_container_high</item>
        <item name="colorSurfaceContainerHighest">@color/surface_container_highest</item>
        <item name="colorSurfaceContainerLow">@color/surface_container_low</item>
        <item name="colorSurfaceContainerLowest">@color/surface_container_lowest</item>
        
        <!-- Outline colors -->
        <item name="colorOutline">@color/neutral_50</item>
        <item name="colorOutlineVariant">@color/neutral_80</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/neutral_99</item>
        <item name="colorErrorContainer">#FFFFDAD6</item>
        <item name="colorOnErrorContainer">#FF93000A</item>
        
        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/recording_primary_40</item>
        <item name="android:navigationBarColor">@color/neutral_99</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Material components style overrides -->
        <item name="materialButtonStyle">@style/Widget.CallRecode.Button</item>
        <item name="materialCardViewStyle">@style/Widget.CallRecode.CardView</item>
    </style>
    
    <!-- Dark theme variant -->
    <style name="Theme.CallRecode.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/recording_primary_80</item>
        <item name="colorOnPrimary">@color/neutral_10</item>
        <item name="colorPrimaryContainer">@color/recording_primary_20</item>
        <item name="colorOnPrimaryContainer">@color/recording_primary_80</item>
        
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/call_secondary_80</item>
        <item name="colorOnSecondary">@color/neutral_10</item>
        <item name="colorSecondaryContainer">@color/call_secondary_20</item>
        <item name="colorOnSecondaryContainer">@color/call_secondary_80</item>
        
        <!-- Tertiary colors -->
        <item name="colorTertiary">@color/audio_tertiary_80</item>
        <item name="colorOnTertiary">@color/neutral_10</item>
        <item name="colorTertiaryContainer">@color/audio_tertiary_20</item>
        <item name="colorOnTertiaryContainer">@color/audio_tertiary_80</item>
        
        <!-- Background and surface colors -->
        <item name="android:colorBackground">@color/neutral_10</item>
        <item name="colorOnBackground">@color/neutral_90</item>
        <item name="colorSurface">@color/neutral_10</item>
        <item name="colorOnSurface">@color/neutral_90</item>
        
        <!-- Surface variant colors -->
        <item name="colorSurfaceVariant">@color/surface_container_dark</item>
        <item name="colorOnSurfaceVariant">@color/neutral_80</item>
        <item name="colorSurfaceContainer">@color/surface_container_dark</item>
        <item name="colorSurfaceContainerHigh">@color/surface_container_high_dark</item>
        <item name="colorSurfaceContainerHighest">@color/surface_container_highest_dark</item>
        <item name="colorSurfaceContainerLow">@color/surface_container_low_dark</item>
        <item name="colorSurfaceContainerLowest">@color/surface_container_lowest_dark</item>
        
        <!-- Outline colors -->
        <item name="colorOutline">@color/neutral_60</item>
        <item name="colorOutlineVariant">@color/neutral_30</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error_red</item>
        <item name="colorOnError">@color/neutral_99</item>
        <item name="colorErrorContainer">#FF93000A</item>
        <item name="colorOnErrorContainer">#FFFFDAD6</item>
        
        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@color/recording_primary_80</item>
        <item name="android:navigationBarColor">@color/neutral_10</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

</resources>